#include <string>
#include <vector>
using namespace std;

class Solution {
public:
    string addBinary(string a, string b) {
        int carry = 0;
        string res = "";
        
        int A = a.size()-1;
        int B = b.size()-1;
        
        while (A >= 0 || B >= 0 || carry == 1) {
            if (A >= 0) {
                carry += a[A] - '0'; 
                A--;
            }
            if (B >= 0) {
                carry += b[B] - '0';
                B--;
            }
            
            res.push_back((carry % 2) + '0'); 
            carry /= 2; 
        }
        
        reverse(res.begin(), res.end());
        return res;
    }
};
